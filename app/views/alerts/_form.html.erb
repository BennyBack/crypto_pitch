<%= form_with(model: @alert, remote: true, url: user_alerts_path(current_user), :authenticity_token => true) do |f| %>

<div class="col">
<div class="time row alert-inputs">
  <%= f.text_field :time, class: "form-control", value: "#{Time.zone.now.strftime('%I:%M')}"  %>
</div>

<div class="currency row alert-inputs">
  <%= f.text_field :currency, class: "form-control", value: "#{@currency}" %>
</div>


<div class="start_value row alert-inputs">
  <%= f.text_field :start_value, class: "form-control", placeholder: "Current Value (USD)"  %>
</div>


<div class="min_new row alert-inputs">
  <%= f.text_field :min_new, class: "form-control", placeholder: "Min new" %>
</div>

<div class="max_new row alert-inputs">
  <%= f.text_field :max_new, class: "form-control", placeholder: "Max new"  %>
</div>

<div class="time_interval row alert-inputs input-group">
 <div class="input-group-btn">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Time Interval
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#">Hours</a>
          <a class="dropdown-item" href="#">Days</a>
          <a class="dropdown-item" href="#">Weeks</a>          
        </div>
      </div>
  <%= f.text_field :time_interval, class: "form-control", placeholder: "Time Value" %>
</div>
  

</div>

<% end %>